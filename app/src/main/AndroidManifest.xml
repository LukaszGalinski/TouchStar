<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.patronage2020.galinski.lukasz.touchstar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".view.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.NewGame"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="nosensor"
            android:configChanges="orientation|keyboardHidden|keyboard"/>
        <activity android:name=".view.Instructions" />
        <activity android:name=".view.Options" />
        <activity android:name=".view.ScoreBoardActivity" />

    </application>

</manifest>