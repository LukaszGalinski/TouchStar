<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Options"
    android:background="@drawable/nie"
    >

    <ImageView
        android:id="@+id/bigStar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_star_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/starLeft"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_star_black_24dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@id/bigStar"
        app:layout_constraintEnd_toStartOf="@id/bigStar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/starRight"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_star_black_24dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@id/bigStar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bigStar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bigStar" />

    <ImageButton
        android:id="@+id/heartSymbol"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:alpha="0.5"
        android:background="@drawable/ic_favorite_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameText" />

    <ImageButton
        android:id="@+id/flowerSymbol"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:alpha="0.5"
        android:background="@drawable/ic_filter_vintage_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/heartSymbol"
        app:layout_constraintTop_toBottomOf="@+id/appNameText" />

    <ImageButton
        android:id="@+id/starSymbol"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:onClick="onClick"
        android:alpha="0.5"
        android:background="@drawable/ic_star_black_24dp"
        app:layout_constraintEnd_toStartOf="@id/heartSymbol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameText" />


    <Button
        android:id="@+id/ok"
        style="@style/ButtonMenu"
        android:text="Select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heartSymbol" />

</androidx.constraintlayout.widget.ConstraintLayout>