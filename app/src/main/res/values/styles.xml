<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonMenu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/main_menu_button_width</item>
        <item name="android:layout_height">@dimen/main_menu_button_height</item>
        <item name="android:layout_marginTop">@dimen/main_menu_button_margin_top</item>
        <item name="android:background">@drawable/menu_button</item>
    </style>
</resources>
